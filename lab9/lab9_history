  1  ldd /bin/login | grep pam
  2  ls -l /lib64/libpam*
  3  ls -l /lib64/security/
  4  vi /etc/pam.d/system-auth
  5  vi /etc/pam.d/su
  6  su -c "hostname mephi"
  7  vi /etc/pam.d/su
  8  su
  9  vi /etc/pam.d/su
 10  sudo useradd -G wheel -p password -s /bin/bash user1
 11  su user1
 12  sudo passwd user1
 13  su user1
 14  vi /etc/pam.d/su
 15  nano /etc/pam.d/login
 16  cp /etc/pam.d/login ./logcopy
 17  sudo cp ./logcopy /etc/pam.d/login 
 18  man pam_pwquality
 19  nano /etc/security/pwquality.conf
 20  vi /etc/pam.d/system-auth
 21  sudo passwd alexanox 
 22  vi /etc/pam.d/system-auth
 23  vi /etc/security/pwquality.conf
 24  man pam_limits
 25  vi /etc/security/limits.conf
 26  su user1
